{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MBL Client: Prepare",
            "type": "shell",
            "command": "python3",
            "args": [
                "./client-builder.py",
                "-a",
                "prepare",
                "--meta-mbl-revision",
                "${input:meta-mbl-revision}"
              ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
            },
            "problemMatcher": []
        },
        {
            "label": "MBL Client: Configure",
            "type": "shell",
            "command": "python3",
            "args": [
                "./client-builder.py",
                "-a",
                "configure"
              ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
            },
            "problemMatcher": [],
        },
        {
            "label": "MBL Client: Build",
            "type": "shell",
            "command": "python3",
            "args": [
                "./client-builder.py",
                "-a",
                "build"
              ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
            },
            "problemMatcher": [
                {
                    "base": "$gcc",
                    "fileLocation": "absolute"
                }
            ]
        },
        {
            "label": "MBL Client: Rebuild",
            "type": "shell",
            "command": "python3",
            "args": [
                "./client-builder.py",
                "-a",
                "rebuild"
              ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
            },
            "problemMatcher": [
                {
                    "base": "$gcc",
                    "fileLocation": "absolute"
                }
            ]
        },
        {
            "label": "clang: Prepare",
            "type": "shell",
            "command": "python3",
            "args": [
                "./client-builder.py",
                "-a",
                "clang_prepare"
              ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
            },
            "problemMatcher": []
        },
        {
            "label": "clang: Tidy",
            "type": "shell",
            "command": "python3",
            "args": [
                "./client-builder.py",
                "-a",
                "run_clang_tidy"
              ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
            },
            "problemMatcher": [
                {
                    "base": "$gcc",
                    "fileLocation": "absolute"
                }
            ]
        },
        {
            "label": "clang: Format",
            "type": "shell",
            "command": "python3",
            "args": [
                "./client-builder.py",
                "-a",
                "run_clang_format"
              ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
            },
            "problemMatcher": []
        },                
    ],
	"inputs":[
		{
            "id": "meta-mbl-revision",
            "description": "meta-mbl-revision",
			"default": "master",
			"type": "promptString",
		}
	]
}
